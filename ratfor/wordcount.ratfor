# wordcount -- counts the total words in a file

character getc
character c
integer wc, inword

wc = 0
inword = NO
while (getc(c) Â¬= EOF)
    if (c == BLANK | c == NEWLINE | C == TAB)
        inword = NO
    else if (inword == NO) {
        inword = YES
        wc = wc + 1
        }

call putdec(wc, 1)
call putc(NEWLINE)
stop
end
